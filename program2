Jl. Samdalri, No 1,
Kelurahan Myeondong, Korea
"""
agama = 'islam'

# Tipe data boolean (true/false)
nama = "Joshua Seventeen"
alamat = "Korea"
umur = 28
tampan = True 

print("Nama:",nama)
print("Alamat:",alamat)
print("Umur:",umur)
if tampan:
    print("Status:tampan")
else:
    print("Status:tidak tampan")


